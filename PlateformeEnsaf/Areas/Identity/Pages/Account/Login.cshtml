@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"]</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top" style="background-color: #0061f2">

    <!-- Page Wrapper -->
   


        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <div class="container-xl px-4">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <!-- Basic login form-->
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header justify-content-center"><h3 class="fw-light my-4">Connexion</h3></div>

                                <div class="card-body">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <!-- Login form-->
                                    <form id="account" method="post">
                                        <!-- Form Group (email address)-->
                                        <div class="mb-3 form-group">
                                            <label class="small mb-1" asp-for="Input.Email"></label>
                                            <input class="form-control" asp-for="Input.Email" placeholder="Enter email address">
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <!-- Form Group (password)-->
                                        <div class="mb-3 form-group">
                                            <label class="small mb-1" asp-for="Input.Password"></label>
                                            <input class="form-control" asp-for="Input.Password" placeholder="Enter password">
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <!-- Form Group (remember password checkbox)-->
                                        <div class="mb-3 form-group">
                                            <div class="form-check">
                                                <input class="form-check-input" asp-for="Input.RememberMe">
                                                <label class="form-check-label" asp-for="Input.RememberMe"></label>
                                            </div>
                                        </div>
                                        <!-- Form Group (login box)-->
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0 form-group">
                                            <a class="small" href="auth-password-basic.html">Forgot Password?</a>
                                            <button class="btn btn-primary" type="submit">Se Connecter</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a asp-page="./Register">Need an account? Sign up!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <!-- Bootstrap core JavaScript-->


</body>



</html>

<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="~/js/sb-admin-2.min.js"></script>



