                                            <div class='clearfix'></div>
                                            <img alt='tick image' width='20' src='data:image/svg+xml;utf8;base64,' />
                                            <div class='text-message'></div>
                                            <div class='clearfix'></div>
                                        </div>

                                    </section>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }



