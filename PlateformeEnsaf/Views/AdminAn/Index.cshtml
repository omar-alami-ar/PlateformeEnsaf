@model IEnumerable<PlateformeEnsaf.Models.Annonce>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

<h1 class="text-dark">Annonces En Attente d'Approbation</h1>


<div class="row mt-4">
    <div class="col-md-12">

        <table id="myTable" class="table text-dark table-bordered table-striped table-sm" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Titre)
                    </th>
                    <th>
                        Proprietaire
                    </th>
                    <th>
                        Date de publication
                    </th>



                    <th class="th-sm">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.UserName)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.DatePublication)
                        </td>

                        <td>

                            @if (item is Offre)
                            {
                                <a class="text-primary" asp-action="DetailsOff" asp-controller="Annonce" asp-route-id="@item.Id">Details</a>
                            }
                            else
                            {
                                <a class="text-primary" asp-action="Details" asp-controller="Annonce" asp-route-id="@item.Id">Details</a>
                            }|
                            <a class="text-success" asp-action="Edit" asp-route-id="@item.Id">Approuver</a> |
                            <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        $('#myTable').DataTable();
    });
</script>
