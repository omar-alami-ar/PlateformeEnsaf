@model PlateformeEnsaf.Models.Offre

@{
    ViewData["Title"] = "Createof";
}

<h1>Creer une nouvelle offre</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateOff" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Titre" class="control-label"></label>
                    <input asp-for="Titre" class="form-control" />
                    <span asp-validation-for="Titre" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Categorie" class="control-label"></label>
                    <select asp-for="Categorie" class="form-control" asp-items="Html.GetEnumSelectList<CategorieOffre>()"></select>
                    <span asp-validation-for="Categorie" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Entreprise" class="control-label"></label>
                    <input asp-for="Entreprise" class="form-control" />
                    <span asp-validation-for="Entreprise" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Ville" class="control-label"></label>
                    <input asp-for="Ville" class="form-control" />
                    <span asp-validation-for="Ville" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @foreach (var dom in ViewBag.domaines)
                {
                    <input name="doms" type="checkbox" value="@dom.Id" />
                    <label class="control-label mr-4"> @dom.Nom</label>
                }

            </div>
            <div class="custom-file form-group">
                <label class="custome-file-label">Images</label>
                <br />
                <input type="file" multiple accept="image/*" asp-for="ImageFiles" class="" />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary col-md-6" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
