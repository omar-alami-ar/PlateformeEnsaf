@model IEnumerable<PlateformeEnsaf.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

<h1 class="text-dark">Utilisateurs</h1>

<div class="row mt-4">
    <div class="col-md-12">

        <table  id="myTable" class="table text-dark table-bordered table-striped table-sm" cellspacing="0">
            <thead>
                <tr>
                    <th >
                        Nom Complet

                    </th>

                    <th>
                        Nom d'utilisateur
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Niveau)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.Note)
                    </th>
                    

                    <th class="th-sm">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Niveau)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>

                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="/Chat/Index/@item.Id" asp-route-id="@item.Id">Contacter</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Blacklist</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Supprimer</a> 
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        $('#myTable').DataTable();
    });
</script>
